<resources>

    <!--
        Base application theme for API 14+. This theme completely replaces
        AppBaseTheme from BOTH res/values/styles.xml and
        res/values-v11/styles.xml on API 14+ devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Material.Light">
        <item name="android:colorPrimaryDark">@color/noticationBar</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>

    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar"
    parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
    <item name="android:background">@color/actionBar</item>
    <item name="android:actionBarTabTextStyle">@style/MyActionBarText</item>

</style>

    <style name="MyActionBarText"
        parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:text">@color/titleTobBarText</item>
        <item name="android:fontFamily">sans-serif</item>



    </style>

    <style name="dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:padding">30dp</item>
        <item name="android:dialogTitle">@string/action_about</item>


    </style>

</resources>
